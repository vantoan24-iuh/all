<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd"
             version="3.1">
    <persistence-unit name="mariadb">
        <jta-data-source>jdbc/maria</jta-data-source>
        <class>vn.edu.iuh.fit.week03_phantiensinh.backend.repositories.entities.Product</class>
        <class>vn.edu.iuh.fit.week03_phantiensinh.backend.repositories.entities.ProductPrice</class>
    </persistence-unit>

    <persistence-unit name="JPADemo_MariaDB">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:mariadb://localhost:3306/productdb"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="root"/>

            <!--            Phat sinh ra cau SQl chuan-->
            <property name="jakarta.persistence.jdbc.dialect" value="org.hibernate.dialect.MariaDBDialect"/>

            <!--            Cau hinh show sql-->
            <property name="jakarta.persistence.jdbc.show_sql" value="true"/>
            <property name="jakarta.persistence.jdbc.format_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>

        </properties>
    </persistence-unit>



</persistence>
